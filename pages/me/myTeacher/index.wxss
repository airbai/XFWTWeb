
text{
    color: darkgray;
    font-size: 12px;
}


/*列表view*/
.cell{

 display: flex;
 flex-direction: column;
 border-bottom: 0.5px solid rgb(245, 245, 245);
 padding: 8px;
 
}

/*上部分*/
.cell-top{
    display: flex;
    flex-direction: row;
}

/*上部分左边*/
.cell-top-left{
    width: 80px;
    height: 80px;
}

/*列表图片*/
.cell image{
width: 100%;
height: 100%;
}

/*右边view*/
.cell-top-right{
    margin:5px 0 0 8px;
    flex: 1;
    position: relative;
}


/*标题*/
.titleText{
    display: block;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    font-size: 15px;
    color: black;

/*强制不换行*/
  white-space:nowrap;
/*超出一行文字自动隐藏*/
 overflow:hidden; 
 /*文字隐藏后添加省略号*/
 text-overflow:ellipsis;
 
}

/*电话*/
.telText{
    display: inline-block;
     position: absolute;
    left: 0;
    right: 70;
    top: 27px;

/*超出一行文字自动隐藏*/
 overflow:hidden; 
 /*文字隐藏后添加省略号*/
 text-overflow:ellipsis;
 /*强制不换行*/
  white-space:nowrap;
}


/*电话图片view*/
.phoneView{
 
    position: absolute;
    right: 10px;
    top: 18px;
    width:23px;
    height: 23px;
}


/*个人介绍*/
.profileText{
   position: absolute;

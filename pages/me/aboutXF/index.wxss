text{
    font-size: 15px;
}
.contain{
 position: relative;
  
}
 
/*图标*/
image{

    position: absolute;
    left: 10px;
    top: 10px;
    width: 80px;
    height: 80px;
}

/*公司，客户端，版本*/
.company , .category , .version{
    position: absolute;
    left: 100px;
    display: block;
}

/*公司*/
.company{
    top: 15px;
}
/*客户端*/
.category{
    top: 43px;
}
/*版本号*/
.version{
    top: 69px;
}
/*内容*/
.content{
    position: absolute;
    top: 100px;
    left: 10px;
    right: 10px;
    font-size: 14px;
    text-indent: 2em; /*首行缩进2字符*/
    line-height: 25px;/*行间距*/
    padding-bottom: 50px;
}

/*客服热线*/
.phone{
position: fixed;
left: 0;
right: 0;
bottom:0;
color: gray;
text-align: center;
font-size: 13px;
height: 40px;
line-height: 40px;
background: rgb(245, 245, 245);
}


/*底部栏*/
.footer{
position: fixed;
left: 0;
right: 0;
bottom: 0;
height: 44px;
border-top: solid 0.5px lightgray;
border-bottom: solid 0.5px lightgray;
background: white;

}

/*语音、表情、添加view*/
.voiceView,.faceView,.addView{
    position: absolute;
    display: inline-block;
    top: 7px;
}
/*语音view*/
.voiceView{
left: 5px;
}
/*表情view*/
.faceView{
    right: 40px; 
}
/*添加view*/
.addView{
    right: 5px; 
}

/*语音、表情、添加图标*/
.voice,.face,.add{
    width: 30px;
    height: 30px;
}


/*输入框、 说话按钮*/
input ,.say{
position: absolute;
height: 30px;
top: 7px;
left: 40px;
right: 75px;
border: solid 0.5px lightgray;
border-radius: 3px;
font-size: 15px;
}
/*输入框*/
input{
padding-left: 5px;
}
/*说话view*/
.say{ 
line-height: 30px; 
background: rgb(245, 245, 245);
color: gray;
text-align: center;
}


scroll-view{

position: fixed;
left: 0;
right: 0;
    height: 300px;
    background: rgb(245, 245, 245);
}


/*自己的cell*/
.selfCell{
  position: relative;
  margin: 20px 10px 0 60px;
text-align: right;

}

/*自己内容view*/
.selfContentView{

background: lightgray;
display: inline-block;
margin-right: 50px;
border-radius: 5px;
}
/*自己的头像*/
.selfIcon{
 
 position: absolute;
 right: 0px;
 top: 0px;
    width: 40px;
    height: 40px;
  background: blue;
}

/*自己发送的语音*/
.selfVoicePic{
    width: 40px;
    height: 40px;   
}
/*自己发送的文字*/
.selfText{
padding: 13px 5px;
 text-align: right;
}
/*自己发送的表情*/
.selfFacePic{
    width: 40px;
    height: 40px;   
}
/*自己发送的照片*/
.selfPhoto{
    width: 100px;
    height: 100px;    
}
/*自己发送的视频*/
.selfVideo{
    width: 100px;
    height:100px; 
}
/*自己发送的地图*/
.selfMap{
    width: 100px;
    height:100px;    
}

/*对方的cell*/
.otherCell{
  position: relative;
  margin: 20px 60px 0 10px;
text-align: left;
}
/*对方内容view*/
.otherContentView{
background: lightsteelblue;
display: inline-block;
margin-left: 50px;
border-radius: 5px;
}
/*对方的头像*/
.otherIcon{
 position: absolute;
 left: 0px;
 top: 0px;
    width: 40px;
    height: 40px;
}
/*对方发的语音*/
.otherVoicePic{
    width: 40px;
    height: 40px;  
}
/*对方发的文字*/
.otherText{
padding: 13px 5px;
 text-align: left;
 color: black;
}
/*对方发的表情*/
.otherFacePic{
    width: 40px;
    height: 40px; 
}
/*对方发的照片*/
.otherPhoto{
    width: 100px;
    height: 100px; 
}
/*对方发送的视频*/
.otherVideo{
    width: 100px;
    height: 100px;
}
/*对方发送的地图*/
.otherMap{
    width: 100px;
    height:100px;    
}



/*底部隐藏的toView*/
.hideView{
    height: 130px;
}

/*照片面板*/
.photoPan{

position: fixed;
bottom: 0;
left: 0;
right: 0;
height: 200px;

}

/*小view*/
.item{
    display: inline-block;
    margin-top: 25px;
     width:60px;
    height: 60px;
    text-align: center;

}
/*相册view*/
.box{
    width:40px;
    height: 40px;
    border: solid 1px darkgray;
    border-radius: 5px;
    text-align: center;
    margin: 0 auto;
}
/*图片*/
.box image{
    height:30px;
    width: 30px;
    margin:3px auto;
}
/*文字*/
.subject{
font-size: 11px;
color: darkgray;
margin: 2px auto;

}
 

 
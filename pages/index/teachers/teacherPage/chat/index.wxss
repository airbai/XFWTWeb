
/*底部栏*/
.footer{
position: fixed;
left: 0;
right: 0;
bottom: 0;
height: 44px;
border-top: solid 0.5px lightgray;
background: white;
}

/*语音、表情、添加view*/
.voiceView,.faceView,.addView{
    position: absolute;
    display: inline-block;
    top: 7px;
}
/*语音view*/
.voiceView{
left: 5px;
}
/*表情view*/
.faceView{
    right: 40px; 
}
/*添加view*/
.addView{
    right: 5px; 
}

/*语音、表情、添加图标*/
.voice,.face,.add{
    width: 30px;
    height: 30px;
}


/*输入框、 说话按钮*/
input ,.say{
position: absolute;
height: 30px;
top: 7px;
left: 40px;
right: 75px;
border: solid 0.5px lightgray;
border-radius: 3px;
}
/*输入框*/
input{
padding-left: 5px;
}
/*说话按钮*/
.say{ 
line-height: 30px; 
background: white;
font-size: 15px;
}

/*背景view*/
.bgView{
   
padding-bottom: 44px;
}


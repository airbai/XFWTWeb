<view class="contain">

<!--价格-->
<view class="courseView">
<text class="course">课程总价:</text>
<text class="price">¥{{totalPrice}}</text>
</view>

<!--支付方式-->
<view class="payStyleView">
<text class="payStyle">支付方式:</text>

<radio-group class="radio-group" bindchange="radioChange">
<!--微信-->
  <label class="wechat-label">
 <radio  value="wechat" checked="true"/>微信
  <image class="wechat-icon" src="../../../../../../image/wechat.png"></image>
  </label>
<!--支付宝-->
  <label class="alipay-label">
    <radio value="alipay"/>支付宝
  <image class="alipay-icon" src="../../../../../../image/alipay.png"></image>
  </label>

</radio-group>
</view>

<!--确认-->
<button class="sure" type="warn" bindtap="sureAction">确认支付</button>


</view>